<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <% if customer_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class "nav-brand" href="/">ながのCAKE</a>
      <ul class="navbar-nav ml-auto">
       <li class="nav-item"><%= link_to 'マイページ', public_customer_path(current_customer.id),class:"fas fa-home nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to '商品一覧', public_items_path,class:"fas fa-users nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to 'カート', public_cart_items_path,class:"fas fa-book-open nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to 'ログアウト', destroy_customer_session_path,method: :delete,class:"fas fa-sign-out-alt nav-link text-ligh" %></li>
      </ul>
    </div>
   </nav>
   <% elsif admin_signed_in? %>
   <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class "nav-brand" href="/">ながのCAKE</a>
      <ul class="navbar-nav ml-auto">
       <li class="nav-item"><%= link_to '商品一覧', admin_items_path,class:"fas fa-users nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to '会員一覧', admin_customers_path,class:"fas fa-book-open nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to '注文履歴一覧', admin_homes_top_path,class:"fas fa-book-open nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to 'ジャンル一覧', admin_genres_path,class:"fas fa-book-open nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to 'ログアウト', destroy_customer_session_path,method: :delete,class:"fas fa-sign-out-alt nav-link text-ligh" %></li>
      </ul>
    </div>
   </nav>
   <% else %>
   <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class "nav-brand text-light" href="/">ながのCAKE</a>
      <ul class="navbar-nav ml-auto">
       <li class="nav-item"><%= link_to 'About', public_homes_about_path,class:"fas fa-home nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to '商品一覧', public_items_path,class:"fas fa-link nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to '新規登録', new_customer_registration_path,class:"fas fa-user-plus nav-link text-ligh" %></li>
       <li class="nav-item"><%= link_to 'ログイン', new_customer_session_path,class:"fas fa-sign-in-alt nav-link text-ligh" %></li>
      </ul>
    </div>
   </nav>
   <% end %>
  </body>
  <%= yield %>
</html>