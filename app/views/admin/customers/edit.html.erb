<main>
 <p id="notice"></p>
  <div class="container">
   <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h3><%= @customer.full_name %>さんの会員情報編集</h3>

   <%= form_with model: [:admin,@customer], local:true do |f| %>
   <div class="col-lg-5">
    <%= f.label :会員ID %>
    <%= @customer.id %></div>

   <div class="col-lg-5">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %></div>

   <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %></div>

   <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code,class:'form-control' %></div>

   <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field:address %></div>

   <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %></div>

   <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.text_field :email %></div>

   <div class="form-group">
    <%= f.label :会員ステータス %>
    <%= f.radio_button :is_deleted, "validity" %>
    <%= f.label :is_deleted,"有効",value: "validity"  %>
    <%= f.radio_button :is_deleted, "withdraw" %>
    <%= f.label :is_deleted,"退会",value: "withdraw" %></div>

    <%= f.submit :"変更を保存",class: "btn btn-sm btn-success" %>
    <% end %>
   </div>
   </div>
  </div>
</main>