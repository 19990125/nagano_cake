<main>
 <p id="notice"></p>
  <div class="container">
  <div class="row">
  <div class="col-md-9 offset-md-3 mx-auto">

    <h4>商品詳細</h4>

    <div class="col-md-2"><%= attachment_image_tag @item,:image %></div>
    <table>
    <thead>
      <tr>
        <th class=col-md-1>商品名</th>
        <th>商品説明</th>
        <th>ジャンル</th>
        <th>税込価格（税抜価格）</th>
        <th>販売ステータス</th>
      </tr>
    </thead>

     <tbody>
      <td><%= @item.name %></td>
      <td><%= @item.introduction %></td>
      <td><%= @genre.name %></td>
      <td><%= @item.price %></td>
      <td><%= @item.is_active_i18n %></td>
     </tbody>
     </table>
  </div>
  </div>
  </div>
</main>
