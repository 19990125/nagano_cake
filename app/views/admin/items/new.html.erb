<main>
 <p id="notice"></p>
  <div class="container">
   <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h5>商品新規登録</h5>

   <%= form_with model: [:admin,@item], local:true do |f| %>
   <div class="form-group">
    <%= f.label :商品画像 %>
    <%= f.attachment_field :image %></div>

   <div class="form-group">
    <%= f.label :商品名 %>
    <%= f.text_field :name %></div>

   <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_field :introduction,　class:'form-control' %></div>

   <div class="form-group">
    <%= f.label :ジャンル %>
    <%= f.collection_select(:genre_id, @genres, :id, :name) %></div>

   <div class="form-group">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price %>円</div>

   <div class="form-group">
    <%= f.label :販売ステータス %>
    <%= f.radio_button :is_active, "0" %>
    <%= f.label :is_active,"販売中",value: 0 %>
    <%= f.radio_button :is_active, "1" %>
    <%= f.label :is_active,"販売停止中",value: 1 %></div>
    <%= f.submit :"新規登録",class: "btn btn-sm btn-success" %>
    <% end %>
   </div>
   </div>
  </div>
</main>