<main>
 <div class="container">
 <div class="row">
  <h2>管理者ログイン</h2>

<%= form_with model: resource, url: new_admin_session_path, local: true do |f| %>
  <div class="col-6">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
 </div>

  <div class="row">
  <div class="col-6">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  </div>

  <div class="row">
  <div class="col-1">
    <%= f.submit "ログイン",class: "btn btn-info btn-sm btn-block mb-3 sign_in" %>
  </div>
  </div>
  <% end %>
 </div>
</main