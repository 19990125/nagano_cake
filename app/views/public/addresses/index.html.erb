<main>
 <div class="container">
  <div class="row">


   <h5>配送先登録/一覧</h5>

    <%= form_with model: @address, url: public_addresses_path, local: true do |f| %>
     <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし） %><br />
      <%= f.text_field :postal_code,class:'form-control' %>
     </div>

     <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_field:address %>
     </div>

     <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_field:name %>
     </div>

     <div class="form-group">
      <%= f.submit "新規登録",class: "btn btn-sm btn-success" %>
     </div>
    <% end %>

   <table>
    <thead>
     <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th class="col-span-3"></th>
     </tr>
    </thead>

    <tbody>
     <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to"編集する", edit_public_address_path(address.id),class: "btn btn-sm btn-success" %></td>
        <td><%= link_to"削除する", public_address_path,class: "btn btn-danger", method: :delete %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</main>