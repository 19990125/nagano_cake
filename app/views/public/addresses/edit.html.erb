<main>
 <p id="notice"></p>
  <div class="container">
   <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h5>配送先編集</h5>

   <%= form_with model: [:public,@address], local:true do |f| %>
   <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %></div>

   <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address %></div>

   <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field:name %></div>

    <%= f.submit :"変更内容を保存",class: "btn btn-sm btn-success" %>
    <% end %>
   </div>
   </div>
  </div>
</main>