<main>
  <div class="container">
   <div class="row">

    <h5>注文情報入力</h5>

   <%= form_with model:@orders,url:public_orders_comfirm_path, local:true do |f| %>
   <div class="form-group">
    <%= f.label :支払方法 %>
    <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method,"クレジットカード",value: 0 %>
    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method,"銀行振込",value: 1 %></div>

   <div class="form-group">
    <%= f.label :お届け先 %>
    <%= f.label :address_type, 'ご自身の住所' %>
    <%= f.radio_button :address_type,"2" %>
    <%= current_customer.address %>

    <%= f.label :address_type, '登録済住所から選択' %>
    <%= f.radio_button :address_type, "1" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>

    <%= f.label :address_type, '新しいお届け先' %>
    <%= f.radio_button :address_type,"0" %>
    <div class="form-group">
    <%= f.label :郵便番号（ハイフンなし）%>
    <%= f.text_field :postal_code,class:'form-control' %></div>
    <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field:address %></div>
    <div class="form-group">
    <%= f.label :宛名 %>
    <%= f.text_field :name %></div>
    <%= f.submit :確認画面へ進む, class: "btn btn-sm btn-success" %>
    <% end %>

   </div>
   </div>
</main>