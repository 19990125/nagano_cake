<main>
  <div class="container">
   <div class="row">

    <tbody>
     <tr>
      <td><%= @item.name %></td>
      <td><%= @item.introduction %></td>
      <td>¥<%= @item.price %>(税込)</td>
      <%= form_with model:@cart_items,url:public_cart_items_path, local: true do |f| %>
      <td><%= f.hidden_field :item_id, value: @item.id %></td>
      <td><%= f.select :amount, *[1..10] %></td>
      <td><%= f.submit"カートに入れる",class:"btn btn-sm btn-success" %></td>
      <% end %>
     </tbody>
     </table>
  </div>
  </div>
  </div>
</main>
