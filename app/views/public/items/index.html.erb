<main>
  <div class="container">
  <div class="col-md-10 offset-md-2 mx-auto">
    <h5>商品一覧</h5>
    <thead>
     <tr>
      <td class="col-span-3"></td>
      <td>商品名</td>
      <td>税抜価格</td>
     </tr>
    </thead>

    <tbody>
     <% @items.each do |item| %>
      <tr>
       <td><%= link_to public_item_path(item.id) do %>
       <%= attachment_image_tag item, :image, fallback: "no_image.jpg", size:'40x40' %></td>
       <% end %>
       <td><%= item.name %></td>
       <td>¥<%= item.price %></td>
      </tr>
     <% end %>
     <%= paginate @items %>
    </tbody>
  </div>
  </div>
</main>