<main>
 <p id="notice"></p>
  <div class="container">
   <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h5>会員情報編集</h5>

   <%= form_with model: [:admin,@customer], local:true do |f| %>
   <div class="form-group">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %></div>

   <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %></div>

   <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field:address %></div>

   <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %></div>

   <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>

    <%= f.submit :"編集内容を保存",class: "btn btn-sm btn-success" %>

    <%= link_to "退会する",public_customers_unsubscribe_path,class: "btn btn-danger", method: :delete %>
    <% end %>
   </div>
   </div>
  </div>
</main>