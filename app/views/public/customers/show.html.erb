<main>
 <div class="container">
  <div class="row">
   <h5>マイページ</h5>

   <h5>登録情報</h5>

   <%= link_to "編集する",edit_public_customer_path,class: "btn btn-sm btn-success" %>

   <table>
    <thead>
     <tr>
     <th>氏名</th>
     <th>カナ</th>
     <th>郵便番号</th>
     <th>住所</th>
     <th>電話番号</th>
     <th>メールアドレス</th>
     </tr>
    </thead>

    <tbody>
      <td><%= @customer.full_name %></td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      <td><%= @customer.postal_code %></td>
      <td><%= @customer.address %></td>
      <td><%= @customer.telephone_number %></td>
      <td><%= @customer.email %></td>
    </tbody>
   </table>

    配送先<%= link_to"一覧を見る", public_addresses_path,class: "btn btn-info btn-sm" %>

    注文履歴<%= link_to"一覧を見る", public_orders_path,class: "btn btn-info btn-sm" %>

  </div>
 </div>
</main>