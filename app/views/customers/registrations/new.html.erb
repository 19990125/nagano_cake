<main>
  <div class="container">
   <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>新規会員登録</h2>

   <%= form_with model: resource,url:new_customer_registration_path, local:true do |f| %>
   <div class="col-md-5">
    <%= f.label :名前 %>
    <span>(姓)</span>
    <%= f.text_field :last_name %>
    <span>(名)</span>
    <%= f.text_field :first_name %></div>

   <div class="form-group">
    <%= f.label :フリガナ %>
    <span>(フリ)</span>
    <%= f.text_field :last_name_kana %>
    <span>(ガナ)</span>
    <%= f.text_field :first_name_kana %></div>

    <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>

   <div class="form-group">
    <%= f.text_field :postal_code,class:'form-control' %></div>

   <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field:address %></div>

   <div class="form-group">
    <%= f.label :電話番号ハイフンなし %>
    <%= f.text_field :telephone_number %></div>

   <div class="field">
    <%= f.label :パスワード６文字以上 %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-sm btn-success" %>
  </div>
<% end %>

 <h2>既に登録済みの方</h2>
 <p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>
   </div>
   </div>
  </div>
</main>